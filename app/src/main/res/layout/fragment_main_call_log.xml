<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_color_dark"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_all"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_radius_half_l_primary"
            android:gravity="center"
            android:text="@string/term_all"
            android:textColor="@color/color_white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_missed"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_radius_half_r_gray"
            android:gravity="center"
            android:text="@string/term_missed"
            android:textColor="@color/color_white"
            android:textSize="15sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edit_CallSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_input_primary"
            android:inputType="text"
            android:maxLength="20"
            android:textColor="@color/text_label"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/mImg_CallSearch"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:background="#00ff0000"
            android:padding="1dp"
            android:src="@drawable/ic_search_black_24dp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:background="@drawable/bg_contents_white"
        android:padding="5dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/call_log_list"
            android:layout_width="match_parent"
            android:layout_height="402dp" />

        <TextView
            android:id="@+id/call_empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="@string/msg_there_are_no_logs"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:visibility="gone" />

    </FrameLayout>
</LinearLayout>